.titulo
	h2 Categorias

.menu
	= link_to("Cadastrar categoria", new_categoria_path, :class => 'botao cadastrar')

table.table.table-hover
		thead
			tr
				th Categoria
				th Ações
		- if @categorias.length > 0 
			tbody
				-@categorias.each do |categoria|
					tr id="#{categoria.id}"
						td =categoria.nome
						td 
							=link_to("Detalhar",categoria_path(categoria.id), :class => 'botao detalhar')
							|&nbsp
							=link_to("Editar", edit_categoria_path(categoria.id), :class => 'botao editar')
							|&nbsp
							=link_to("Excluir", categoria_path(categoria.id), :method => :delete, :class => 'botao excluir', :confirm => "Tem certeza de que deseja excluir a categoria #{categoria.nome}?")
		- else
			tbody
				tr#vazia
					td colspan=2
						| Não existem categorias cadastradas.